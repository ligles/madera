<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.ril14.madera" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Madera</name>
    <description>
        L'application Madera pour la formation RIL14.
    </description>
    <author email="anthony.gee@viacesi.fr" href="http://twitter.com/Anthony_Jaskar">
        Madera Team [GÃ©e, Vandecandelaere, Verdier]
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
	<allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

	
	<!-- ICONS & SPLASHSCREEN-->
	
	<preference name="orientation" value="portrait" />

	<platform name="android">
		<splash src="res/screens/android/screen-hdpi-portrait.png" density="port-hdpi"/>
		<splash src="res/screens/android/screen-ldpi-portrait.png" density="port-ldpi"/>
		<splash src="res/screens/android/screen-mdpi-portrait.png" density="port-mdpi"/>
		<splash src="res/screens/android/screen-xhdpi-portrait.png" density="port-xhdpi"/>
	</platform>
	<icon src="res/icons/android/icon-36-ldpi.png" platform="android" density="ldpi" />
	<icon src="res/icons/android/icon-48-mdpi.png" platform="android" density="mdpi" />
	<icon src="res/icons/android/icon-72-hdpi.png" platform="android" density="hdpi" />
	<icon src="res/icons/android/icon-96-xhdpi.png" platform="android" density="xhdpi" />
	<icon src="res/icons/android/icon-144-xxhdpi.png" platform="android" density="xxhdpi" />
	<icon src="res/icons/android/icon-192-xxxhdpi.png" platform="android" density="xxxhdpi" />
		
	<platform name="wp8">
          <icon src="res/icons/wp8/ApplicationIcon.png" width="99" height="99" />
          <icon src="res/icons/wp8/Background.png" width="159" height="159" />
		  <splash src="res/screens/wp8/Splash.png" width="768" height="1280" />
 </platform>
</widget>
